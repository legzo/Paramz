<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<context:annotation-config />

	<bean id="paramzApplication" class="org.elitefactory.paramz.web.ParamzApplication" />

	<bean id="paramz" class="org.elitefactory.paramz.model.Paramz">
		<property name="configurationSources">
			<list>
				<value>/data/conf/combined.xml</value>
				
				<value>/data/conf/local.xml</value>
				
				<value>props/default.xml</value>
			</list>
		</property>
	</bean>

</beans>